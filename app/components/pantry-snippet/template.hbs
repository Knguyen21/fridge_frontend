{{#if (eq food.storage "pantry")}}
  {{#unless isEditable}}
    {{#unless isDispose}}
    <h4>Name: {{food.name}}</h4>
    <p>description: {{food.description}}</p>
      {{#if food.expirationDate}}<p>expiration date: {{formatDate food.expirationDate}}</p>{{/if}}
      <button {{action 'editClick'}}>EDIT</button>
      <button {{action 'destroyFood'}}>DELETE</button>
      <button {{action 'disposeClick'}}>DISPOSE</button>
      <br>
      <hr>
      <br>
    {{else}}
      <h3>Name: {{food.name}}</h3>
      <h4>How did you dispose of your food ?</h4>
      <select name="disposal">
          <option value="" value=fridge>Choose the disposal location</option>
          <option value="disposal" value=ate>Ate</option>
          <option class="disposal" value=trash>Trash</option>
          <option class="disposal" value=donate>Donate</option>
      </select>
      <br>
      <button {{action 'disposeClick'}}>Cancel</button>
      <button {{action 'updateFood'}}>Send to Disposal</button>
      <br>
      {{/unless}}
      {{else}}
      <h5> Storage </h5>
      <select name="storage" {{action "selectValue" on="change"}}>
          <option value="storage" value=pantry>pantry</option>
          <option class="storage" value=fridge>fridge</option>
          <option class="storage" value=freezer>freezer</option>
      </select>
        <p>name: {{input value=food.name}}</p>
        <p>description: {{input value=food.description}}</p>
        <p>expiration date: {{input value=food.expirationDate}}</p>
        <button {{action 'editClick'}}>Cancel</button>
        <button {{action 'updateFood'}}>Update my food!</button>
        <br>
  {{/unless}}
{{/if}}
