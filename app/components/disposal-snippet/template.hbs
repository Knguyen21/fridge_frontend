{{#unless isEditable}}
  {{#unless isDispose}}
    <p>name: {{food.name}}</p>
    <p>description: {{food.description}}</p>
    <br>
    <button class="btn btn-info btn-xs" {{action 'editClick'}}>Put back in storage</button>
    <br>
    <br>
    <button class="btn btn-primary btn-xs" {{action 'disposeClick'}}>Change disposal</button>
    <br>
    <br>
    <button class="btn btn-danger btn-xs"{{action 'destroyFood'}}>Delete</button>
    <br>
    <br>
    <hr>
    {{else}}
      <h5>Name: {{food.name}}</h5>
      <p>Description: {{food.description}}</p>
      <p>How did you dispose of your food ?</p>
      <select name="disposal">
          <option class="disposal" value="">Choose the disposal location</option>
          <option class="disposal" value=ate>Ate</option>
          <option class="disposal" value=trash>Trash</option>
          <option class="disposal" value=donate>Donate</option>
      </select>
      <br>
      <br>
      <button class="btn btn-warning btn-xs"{{action 'disposeClick'}}>Cancel</button>
      <button class="btn btn-warning btn-xs"{{action 'updateFood'}}>Change Disposal</button>
      <br>
      <br>
      <hr>
      {{/unless}}
      {{else}}
      <h5>Name: {{food.name}}</h5>
      <p>Description: {{food.description}}</p>
      <p>Did you accidentally disposed your food?</p>
      <p>Where did you store your food</p>
      <select name="storage">
          <option class="storage" value="">Choose the storage location</option>
          <option value="storage" value=fridge>fridge</option>
          <option class="storage" value=freezer>freezer</option>
          <option class="storage" value=pantry>pantry</option>
      </select>
      <br>
      <br>
      <button class="btn btn-warning btn-xs"{{action 'editClick'}}>Cancel</button>
      <button class="btn btn-warning btn-xs"{{action 'updateFood'}}>Put back in storage</button>
      <br>
      <br>
      <hr>
{{/unless}}
